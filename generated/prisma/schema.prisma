generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String    @unique
  phone     String
  role      UserRole  @default(user)
  photo     String?
  Meal      Meal[]
  Expense   Expense[]
  isDeleted Boolean   @default(false)
}

model Meal {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  date    DateTime
  item    String
  meals   Json
  user_id String   @db.ObjectId
  user    User     @relation(fields: [user_id], references: [id])
}

model Expense {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  date    DateTime
  user_id String   @db.ObjectId
  user    User     @relation(fields: [user_id], references: [id])
  purpose Epurpose
}

enum UserRole {
  user
  admin
}

enum Epurpose {
  meal
  rent
}
